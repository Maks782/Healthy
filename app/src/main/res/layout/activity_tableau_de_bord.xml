<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tableau_de_bord">


    <TextView
        android:id="@+id/text_view_progress"
        android:layout_width="41dp"
        android:layout_height="36dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/progress_bar2"
        app:layout_constraintEnd_toEndOf="@+id/progress_bar2"
        app:layout_constraintStart_toStartOf="@+id/progress_bar2"
        app:layout_constraintTop_toTopOf="@+id/progress_bar2"
        tools:text="60%" />

    <ProgressBar
        android:id="@+id/progress_bar2"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_marginStart="115dp"
        android:layout_marginTop="327dp"
        android:layout_marginEnd="50dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circle"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progress_bar"
        app:layout_constraintTop_toTopOf="parent"
        tools:progress="60" />

    <EditText
        android:id="@+id/calories2"
        android:layout_width="171dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="41dp"
        android:ems="10"
        android:hint="Entrez votre poids"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/majKal2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/calories"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar2" />

    <Button
        android:id="@+id/majKal2"
        android:layout_width="135dp"
        android:layout_height="29dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="156dp"
        android:background="#58F85E"
        android:text="Mettre à jour"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/majKal"
        app:layout_constraintTop_toBottomOf="@+id/calories2" />

    <EditText
        android:id="@+id/calories"
        android:layout_width="171dp"
        android:layout_height="46dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="219dp"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:hint="Ajouter vos calories"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/majKal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_marginStart="46dp"
        android:layout_marginTop="327dp"
        android:layout_marginEnd="265dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circle"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:progress="60" />



    <Button
        android:id="@+id/majKal"
        android:layout_width="135dp"
        android:layout_height="29dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="246dp"
        android:layout_marginBottom="164dp"
        android:background="#44F630"
        android:text="Mettre à jour"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calories" />

    <TextView
        android:id="@+id/text_view_progress2"
        android:layout_width="41dp"
        android:layout_height="36dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
        app:layout_constraintEnd_toEndOf="@+id/progress_bar"
        app:layout_constraintStart_toStartOf="@+id/progress_bar"
        app:layout_constraintTop_toTopOf="@+id/progress_bar"
        tools:text="60%" />

    <TextView
        android:id="@+id/titre"
        android:layout_width="462dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="142dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="144dp"
        android:layout_height="242dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.838"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titre"
        app:srcCompat="@drawable/capture" />

    <TextView
        android:id="@+id/JoursRestants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="174dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="77dp"
        android:text="TextView"
        android:textColor="#56E85C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calories" />

    <TextView
        android:id="@+id/Progression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="86dp"
        android:text="Voici votre progression :"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="171dp" />

</androidx.constraintlayout.widget.ConstraintLayout>